//Write a program to input time in seconds and convert it to hours:minutes:seconds format.
#include<stdio.h>
#include<math.h>
int main ()
{
	int h,m,s,ss;

	printf("enter time in seconds = ");
	scanf("%d",&s);
	m=(s%3600/60);
	h=((s/60)/60);
	ss=(((s%3600)%60)%60);
	
	printf("time is %.2d:%.2d:%.2d",h,m,ss );
	return 0;
}
