//Write a program to calculate the area and circumference of a circle given its radius

#include<stdio.h>

int main ()
{
	float r,c,pi,d;
	
	printf("enter the radius of circle = ");
	scanf("%f",&r);
	
	pi=3.14159;

	c = pi*(r*r);
	
	d = 2*(pi*r);
	
	printf("area of circle will be = %.2f\n",c);
	printf("circumference of circle will be = %.2f",d);
	return 0;	
}
