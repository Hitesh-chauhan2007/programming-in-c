#include<stdio.h>
int main ()
{
	printf("enter the sides of triangle = ");
	scanf("%d%d%d",&s1,&s2,&s3);
	
	int a;
	printf("enter a number (1-7) = ");
	scanf("%d",&a);
	
	switch (a){
		case 1:
			printf("monday");
			break;
		case 2:
			printf("tuesday");
			break;
		case 3:
			printf("wednesday");
			break;
		case 4:
			printf("thursday");
			break;
		case 5:
			printf("friday");
			break;
		case 6:
			printf("saturday");
			break;
		case 7:
			printf("sunday");
			break;
		default :
			printf("enter a valid number");
					}
	return 0;
}
